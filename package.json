{
  "name": "social-app-server",
  "version": "1.0.0",
  "description": "MERN Stack Fully Featured Social Media Application",
  "main": "server/dist/server.js",
  "repository": "https://github.com/indranildeveloper/social-app.git",
  "author": "Indranil Halder <indranilhalder.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node server/dist/server.js",
    "server": "nodemon server/server.ts",
    "lint": "eslint --ext .ts,.tsx ./ --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --ext .ts,.tsx ./ --no-error-on-unmatched-pattern --fix",
    "prettier": "prettier \"**/*.+(json|js|jsx|ts|tsx)\"",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "types:check": "tsc --noEmit --pretty",
    "prepare": "husky install",
    "client-install": "yarn --cwd ./client",
    "client": "yarn --cwd ./client dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "formidable": "^2.1.1",
    "helmet": "^6.0.1",
    "jimp": "^0.22.7",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/formidable": "^2.0.5",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^8.0.1",
    "eslint": "8.40.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.3.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
